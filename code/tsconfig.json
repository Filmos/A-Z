{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "www",
    "baseUrl": ".",
		"rootDir": "./src",
    "paths": {
      "*": ["node_modules/*"]
    },
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "plugins": [
        { "transform": "./transformers/mapping.ts"},
    ]
  },
  "include": [
    "src/**/*"
  ]
}